<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
		.ratepanel {
			background-color: white;
			
		}
	</ui:style>
	<g:AbsolutePanel width="100%" height="100%">
		<g:at left="0" top="0">
			<g:HorizontalPanel width="100%" height="100%">
				<g:cell horizontalAlignment="ALIGN_CENTER">
					<g:Image height="100%" ui:field="portrait"
						url="http://upload.wikimedia.org/wikipedia/commons/thumb/8/85/Smiley.svg/600px-Smiley.svg.png" />
				</g:cell>
			</g:HorizontalPanel>
		</g:at>
		<g:at left="0" top="0">
			<!-- <g:FormPanel width="100%" height="100%"> -->
				<g:HorizontalPanel width="100%" height="100%">
					<g:cell horizontalAlignment="ALIGN_CENTER"
						verticalAlignment="ALIGN_BOTTOM">
						<g:VerticalPanel styleName="{style.ratepanel}">
							<g:Label ui:field="fbInfo" />
							<g:HorizontalPanel>
								<g:Label>1</g:Label>
								<g:RadioButton name="rating" ui:field="r1" />
								<g:RadioButton name="rating" ui:field="r2" />
								<g:RadioButton name="rating" ui:field="r3" checked="true" />
								<g:RadioButton name="rating" ui:field="r4" />
								<g:RadioButton name="rating" ui:field="r5" />
								<g:Label>5</g:Label>
							</g:HorizontalPanel>
							<g:HorizontalPanel width="100%">
								<g:cell horizontalAlignment="ALIGN_CENTER">
									<g:Button ui:field="submitBtn">Rate!</g:Button>
								</g:cell>
							</g:HorizontalPanel>
						</g:VerticalPanel>
					</g:cell>
				</g:HorizontalPanel>
			<!-- </g:FormPanel> -->
		</g:at>
	</g:AbsolutePanel>
</ui:UiBinder> 