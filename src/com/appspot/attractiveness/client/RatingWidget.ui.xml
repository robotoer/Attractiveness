<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.ratepanel {
			background-color: white;
		}
		.fillheight {
			min-height: 100%;
		}
	</ui:style>
	<g:AbsolutePanel width="100%" height="100%">
		<g:at left="0" top="0">
			<g:HorizontalPanel width="100%" height="100%">
				<g:cell horizontalAlignment="ALIGN_CENTER">
					<g:Image width="100%" ui:field="portrait"
						url="http://upload.wikimedia.org/wikipedia/commons/thumb/8/85/Smiley.svg/600px-Smiley.svg.png" />
				</g:cell>
			</g:HorizontalPanel>
		</g:at>
		<g:at left="0" top="0">
			<g:HorizontalPanel width="100%" height="100%">
				<g:cell horizontalAlignment="ALIGN_CENTER"
					verticalAlignment="ALIGN_BOTTOM">
					<g:DecoratorPanel>
						<g:VerticalPanel>
							<g:Label ui:field="fbInfo" />
							<g:HorizontalPanel>
								<g:Label>1</g:Label>
								<g:RadioButton name="rating" ui:field="r1" />
								<g:RadioButton name="rating" ui:field="r2" />
								<g:RadioButton name="rating" ui:field="r3" checked="true" />
								<g:RadioButton name="rating" ui:field="r4" />
								<g:RadioButton name="rating" ui:field="r5" />
								<g:Label>5</g:Label>
							</g:HorizontalPanel>
							<g:HorizontalPanel width="100%">
								<g:cell horizontalAlignment="ALIGN_CENTER">
									<g:Button ui:field="submitBtn">Rate!</g:Button>
								</g:cell>
							</g:HorizontalPanel>
						</g:VerticalPanel>
					</g:DecoratorPanel>
				</g:cell>
			</g:HorizontalPanel>
		</g:at>
	</g:AbsolutePanel>
</ui:UiBinder> 